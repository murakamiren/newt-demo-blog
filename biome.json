{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"ignore": [".next", "node_modules"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"useHookAtTopLevel": "error"
			},
			"security": {
				"noDangerouslySetInnerHtml": "off"
			}
		}
	}
}
